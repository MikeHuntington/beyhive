{
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "dist",
    "module": "ES6",
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src/**/*.ts",
    "trigger.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
